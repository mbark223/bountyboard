{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": null,
  "functions": {
    "api/*.ts": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/admin/briefs",
      "destination": "/api/admin-briefs"
    },
    {
      "source": "/api/admin/submissions",
      "destination": "/api/admin-submissions"
    },
    {
      "source": "/api/submissions/:submissionId/feedback",
      "destination": "/api/submissions-feedback?submissionId=:submissionId"
    },
    {
      "source": "/api/briefs/:path*",
      "destination": "/api/briefs/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}